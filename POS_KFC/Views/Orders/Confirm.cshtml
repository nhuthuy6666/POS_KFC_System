@model POS_KFC.Models.Order

@{
    ViewBag.Title = "Xác nhận đơn hàng";
    var order = Model;
}

<link href="~/Content/css/Confirm.css" rel="stylesheet" type="text/css" />


<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 rounded-4 text-center p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <input type="hidden" id="orderId" value="@order.OrderId" />

            <div class="success-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>

            <h4 class="card-title">Đặt hàng thành công!</h4>

            <p class="card-text">
                Cảm ơn bạn đã đặt hàng tại <span class="kfc-brand">KFC</span>.
            </p>

            <hr class="divider" />

            <div class="price-section">
                <div class="price-label">Tổng tiền đơn hàng</div>
                <div class="price-amount">@order.TotalPrice.ToString("N0") ₫</div>
            </div>

            <a href="@Url.Action("Create", "Orders")" class="btn-kfc">
                Tạo đơn hàng mới
            </a>
        </div>
    </div>
</div>

<!-- Toast thông báo in thành công -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="printToast" class="toast align-items-center border-0 fade" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                In hóa đơn thành công!
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/ScriptPage/Confirm.js"></script>
}